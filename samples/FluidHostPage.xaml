<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Sample.FluidHostPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Sample"
    mc:Ignorable="d">
    <Grid
        RowDefinitions="Auto, *"
        BackgroundColor="{AppThemeBinding
            Light={StaticResource OffWhite},
            Dark={StaticResource OffBlack}}">

        <HorizontalStackLayout Grid.Row="0" Background="White">
            <HorizontalStackLayout.Shadow>
                <Shadow Brush="Black" Opacity="0.2" Radius="5"/>
            </HorizontalStackLayout.Shadow>
            <Button Text="Back" Clicked="OnBackClicked"/>
        </HorizontalStackLayout>

        <ContentPresenter x:Name="content" Grid.Row="1" />

    </Grid>
</ContentPage>
